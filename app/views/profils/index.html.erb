<h1>Listing profils</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Job</th>
      <th>City</th>
      <th>Aboutme</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profils.each do |profil| %>
      <tr>
        <td><%= profil.name %></td>
        <td><%= profil.job %></td>
        <td><%= profil.city %></td>
        <td><%= profil.aboutme %></td>
        <td><%= profil.email %></td>
        <td><%= link_to 'Show', profil %></td>
        <td><%= link_to 'Edit', edit_profil_path(profil) %></td>
        <td><%= link_to 'Destroy', profil, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

